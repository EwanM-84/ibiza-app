# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google Maps API
# Get your API key from: https://console.cloud.google.com/google/maps-apis
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================
# Host Verification Services (Optional - for production)
# ============================================================

# MetaMap Identity Verification (RECOMMENDED FOR COLOMBIA)
# Sign up at: https://metamap.com/
# Best for Latin America with local ID support
NEXT_PUBLIC_METAMAP_CLIENT_ID=your_metamap_client_id
METAMAP_API_KEY=your_metamap_api_key

# Jumio Document Verification (Alternative)
# Sign up at: https://www.jumio.com/
# JUMIO_API_KEY=your_jumio_api_key
# JUMIO_API_SECRET=your_jumio_api_secret
# JUMIO_WEBHOOK_SECRET=your_jumio_webhook_secret
# JUMIO_BASE_URL=https://api.jumio.com

# Onfido Identity Verification (Global)
# Sign up at: https://onfido.com/
# ONFIDO_API_TOKEN=your_onfido_api_token
# ONFIDO_WEBHOOK_TOKEN=your_onfido_webhook_token
# ONFIDO_REGION=eu  # eu, us, or ca

# Stripe Identity (If using Stripe for payments)
# Get from: https://dashboard.stripe.com/apikeys
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Background Check Service (Optional)
# BACKGROUND_CHECK_API_KEY=your_background_check_api_key
# BACKGROUND_CHECK_PROVIDER=checkr  # checkr, sterling, etc.

# ============================================================
# Security & Encryption
# ============================================================

# Encryption key for sensitive data (banking info, etc.)
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=your_encryption_key_here

# JWT Secret for API authentication
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_here

# ============================================================
# Email Service (for verification emails)
# ============================================================

# SendGrid (Recommended)
# SENDGRID_API_KEY=your_sendgrid_api_key
# SENDGRID_FROM_EMAIL=noreply@sptcrural.com

# OR Resend
# RESEND_API_KEY=your_resend_api_key

# ============================================================
# Admin Notifications
# ============================================================

# Slack webhook for admin alerts
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Admin email for security alerts
# ADMIN_EMAIL=admin@sptcrural.com
